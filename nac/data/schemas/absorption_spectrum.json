{
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Input to run a given workflow",
  "type": "object",
    "properties": {
      "nHOMO": {
	"type": "integer",
      "description": "Index of the HOMO"
    },
      "initial_states": {
	"type": "array",
      "description": "Initial states of the transitions"
    },
      "final_states": {
	"type": "array",
	"description": "final states of the transitions (Array or Arrays)"
    },
      "ci_range": {
	"type": "array",
	"description": "CI Space used to build the excited states",
	"minItems": 2,
	"maxItems": 2
    },
    "tddft": {
	"type": "string",
	"description": "Type of TDDFT calculations. Available: sing_orb, stda, stddft",
	"default": "stda",
	"enum": [
	    "sing_orb",
	    "stda",
	    "stdft"
	]
    },
    "energy_range": {
	"type": "array",
	"description": "Range of energy in eV to simulate the spectrum",
	"minItems": 2,
	"maxItems": 2,
	"default": [
            0,
            5
	]
    },
	"calculate_oscillator_every": {
	    "type": "integer",
	    "description": "Interval between MD points where the oscillators are computed",
	    "default": 50
	},
	"xc_dft": {
	    "type": "string",
	    "description": "Exchange-correlation functional used in the DFT calculations",
	    "default": "pbe"
	},
	"convolution": {
	    "type": "string",
	    "default": "gaussian",
	    "description": "mathematical function representing the spectrum",
	    "enum": [
		"gaussian",
		"lorentzian"
	    ]
	},
	"broadening": {
	    "type": "number",
	    "description": "thermal broadening in eV",
	    "default": 0.1
	},
	"general_settings": {
	    "$ref": "schemas/general_settings.json"
	}
  },
    "required": [
	"nHOMO",
        "ci_range", 
	"general_settings"
  ]
}

